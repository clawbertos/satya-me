---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Library</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="contact">
			<a href="mailto:satya@satya.me">satya@satya.me</a>
			<a href="https://www.linkedin.com/in/sivunigunta" target="_blank" rel="noreferrer">LinkedIn</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.06em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		flex-wrap: wrap;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.contact {
		display: flex;
		gap: 0.75rem;
		font-size: 0.9em;
	}
	.contact a {
		border-bottom: none;
		color: rgb(var(--gray));
		padding: 0.5em;
	}
	.contact a:hover {
		color: rgb(var(--accent));
	}
	@media (max-width: 720px) {
		.contact {
			width: 100%;
			justify-content: center;
			flex-wrap: wrap;
		}
	}
</style>
